(define-module (wayland config)
  #:export (%xml-paths
            %wayland-libdir
            %libwayland-client
            %libwayland-server
            %libwayland-cursor
            %wayland-protocol
            %wayland-protocols-dir))

(define %xml-paths
  (parse-path (getenv "WAYLAND_PROTOCOLS_XMLS_PATH")))

(define %wayland-libdir
  "@WAYLAND_LIBDIR@/")

(define %wayland-protocol
  "@WAYLAND_DATAROOTDIR@/wayland/wayland.xml")

(define %wayland-protocols-dir
  "@WAYLAND_PROTOCOLS_DATAROOTDIR@")

(define %libwayland-server
  (string-append %wayland-libdir "libwayland-server.so"))

(define %libwayland-client
  (string-append %wayland-libdir "libwayland-client.so"))

(define %libwayland-cursor
  (string-append %wayland-libdir "libwayland-cursor.so"))
